{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>Emetteur</th>
                <th>Recepteur</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.sujet }}</td>
                <td>{{ message.message }}</td>
                <td>{{ message.emetteur }}</td>
                <td>{{ message.recepteur }}</td>
                <td>{{ message.date }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id})}}"class="btn btn-primary">show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}"class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                    
    <a href="{{ path('message_new') }}"class="btn btn-danger">Create new</a>
    
{% endblock %}
